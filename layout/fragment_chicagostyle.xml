<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChicagoStyleFragment">


    <ImageView
        android:id="@+id/image_pizza_type"
        android:layout_width="161dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="124dp"
        android:src="@drawable/chicago_build_your_own"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_pizza_type"
        android:layout_width="301dp"
        android:layout_height="61dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="115dp"
        android:contentDescription="@string/pizza_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_pizza_type" />

    <Spinner
        android:id="@+id/spinner_pizza_size"
        android:layout_width="304dp"
        android:layout_height="67dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="52dp"

        android:contentDescription="@string/pizza_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_pizza_type" />

    <Button
        android:id="@+id/button_order_pizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_pizza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/label_crust"
        android:layout_width="93dp"
        android:layout_height="55dp"
        android:layout_marginStart="55dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="@string/crust"
        app:layout_constraintEnd_toStartOf="@+id/text_crust"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_pizza_size" />

    <TextView
        android:id="@+id/text_crust"
        android:layout_width="182dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="57dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_pizza_size" />

    <TextView
        android:id="@+id/label_price"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toppings_button" />

    <Button
        android:id="@+id/toppings_button"
        android:layout_width="289dp"
        android:layout_height="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="67dp"
        android:text="@string/toppings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_crust" />

</androidx.constraintlayout.widget.ConstraintLayout>